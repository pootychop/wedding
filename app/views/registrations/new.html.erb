<h2>RSVP</h2>
<% if @registration.errors.any? %>
  <div id="error_explanation">
    <h3> <%= pluralize(@registration.errors.count, "error")%> prohibited this registration from being saved.</h3>
    <p>There were problems with the following fields:</p>
    <ul>
      <% @registration.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @registration do |f| %>
  <fieldset>
    <dl>
        <dt><%= f.label :name, "Full Name" %></dt>
        <dd>
        <%= f.text_field :name %>
        </dd>

        <dt><%= f.label :email, "Email Address" %></dt>
        <dd>
        <%= f.text_field :email %>
        </dd>

        <dt>Will you attend?</dt>
        <dd>
        <label><%= f.radio_button :attending, :true %> Yes</label>
        <label><%= f.radio_button :attending, :false %> No</label>
        </dd>

        <dt>Will you bring a friend?
        <aside>We'd like to keep this party small and intimate. Please limit your guests to 1 person.</aside>
        </dt>
        <dd>
        <label><%= f.radio_button :total_guests, 2 %> Yes</label>
        <label><%= f.radio_button :total_guests, 1 %> No</label>
        </dd>
      </dl>
      <dl>
        <dt><%= label :dietary_restrictions, "Dietary Restrictions or allergies?" %></dt>
        <dd>
          <%= f.text_area :dietary_restrictions %>
        </dd>

        <dt><%= f.label :notes %></dt>
        <dd>
          <%= f.text_area :notes %>
        </dd>
      </dl>
    </dl>
    <%= f.submit "submit" %>
  </fieldset>
<% end %>
