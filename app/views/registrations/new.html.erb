<section id="rsvp">
  <div class="center">
    <h2>RSVP</h2>
    <form>
      <fieldset>
        <dl>
          <div>
            <dt>Full Name</dt>
            <dd>
            <input class="text-field" type="text" name="name">
            </dd>

            <dt>Email Adress</dt>
            <dd>
            <input class="text-field" type="text" name="email">
            </dd>

            <dt>Will you attend?</dt>
            <dd>
            <input type="radio" name="yes-no" value="yes">Yes
            <input type="radio" name="yes-no" value="NO">No
            </dd>

            <dt>Will you bring a friend?
            <aside>We'd like to keep this party small and intimate. Please limit your guests to 1 person.</aside>
            </dt>
            <dd>
            <input type="radio" name="plusyes-no" value="yes">Yes
            <input type="radio" name="plusyes-no" value="NO">No
            </dd>
          </div>

          <div>
            <dt>Dietary Restrictions or allergies?</dt>
            <dd><input type="checkbox" name="diet" value="Vegetarian"/>Vegetarian<br>
            <input type="checkbox" name="diet" value="Vegan"/>Vegan<br>
            <input type="checkbox" name="diet" value="Gluten Free"/>Gluten Free<br>
            <input type="checkbox" name="diet" value="Kosher"/>Kosher<br>
            <input type="checkbox" name="diet" value="other"/>Other
            <input class="text-field" type="text" name="otherText">
            </dd>

            <dt>Notes</dt>
            <dd>
            <input id="notes" class="text-field" type="text" name="message">
            </dd>
          </div>

          <div>
            <input class="button" type="submit" value="Submit">
          </div>
        </dl>
      </fieldset>
    </form>
  </div>
</section>
